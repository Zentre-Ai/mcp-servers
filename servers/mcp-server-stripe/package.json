{
  "name": "mcp-server-stripe",
  "version": "1.0.0",
  "description": "MCP server for Stripe with OAuth 2.0 (Stripe Connect) authentication",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-server-stripe": "./build/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && chmod 755 build/index.js",
    "start": "node build/index.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "stripe": "^17.0.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
