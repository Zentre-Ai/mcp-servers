{
  "name": "mcp-server-notion",
  "version": "1.0.0",
  "description": "MCP server for Notion API with dynamic token authentication",
  "author": "Zentre AI",
  "license": "MIT",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-server-notion": "./build/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts --http",
    "build": "tsc && chmod 755 build/index.js",
    "start": "node build/index.js --http",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@notionhq/client": "^2.2.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "notion",
    "notion-api"
  ]
}
